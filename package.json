{
  "name": "api-app-polox",
  "version": "1.0.0",
  "description": "Node.js Serverless API para AWS Lambda com PostgreSQL RDS",
  "main": "src/handler.js",
  "scripts": {
    "dev": "serverless offline --stage dev",
    "dev:local": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:sandbox": "serverless deploy --stage sandbox",
    "deploy:prod": "serverless deploy --stage prod",
    "remove:dev": "serverless remove --stage dev",
    "remove:sandbox": "serverless remove --stage sandbox",
    "remove:prod": "serverless remove --stage prod",
    "logs:dev": "serverless logs -f api --stage dev --tail",
    "logs:sandbox": "serverless logs -f api --stage sandbox --tail",
    "logs:prod": "serverless logs -f api --stage prod --tail",
    "migrate": "node migrations/migration-runner.js up",
    "migrate:rollback": "node migrations/migration-runner.js down",
    "migrate:status": "node migrations/migration-runner.js status",
    "migrate:create": "node scripts/create-migration.js",
    "setup:ssl": "bash scripts/setup-ssl.sh",
    "db:seed": "node scripts/seed-database.js",
    "db:reset": "node scripts/reset-database.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "security:audit": "npm audit",
    "security:check": "node scripts/security-check.js",
    "postinstall": "npm run setup:ssl"
  },
  "dependencies": {
    "aws-sdk": "^2.1481.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cron": "^3.0.2",
    "pg": "^8.11.3",
    "prom-client": "^13.2.0",
    "redis": "^4.6.8",
    "serverless-http": "^4.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.2.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "postgresql",
    "rds",
    "api",
    "node.js"
  ],
  "author": "Polox Team",
  "license": "MIT"
}
